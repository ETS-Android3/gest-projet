<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.employeesmanagementsoftware">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_pm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_pm_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".InscriptionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ConnexionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskCreation.TaskCreation"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Task Creation" />
        <activity
            android:name=".taskDB.TaskActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".DepartmentDB.DepartmentActivity"
            android:label="Department" />
        <activity
            android:name=".DepartmentCreation"
            android:label="@string/title_activity_main2"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EmployeeCreation"
            android:label="@string/title_activity_employee_creation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EmployeeDB.EmployeeActivity"
            android:label="Employee"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".StartingPageActivity"
            android:label="@string/title_activity_starting_page"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>